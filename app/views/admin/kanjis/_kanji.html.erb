<tr>
  <td>
    <div class="d-flex align-items-center">
      <a href="#" class="symbol symbol-50px">
        <span class="symbol-label" style="background-image: url(<%= asset_path("kanji/#{kanji.svg}") %>);"></span>
      </a>
      <div class="ms-5">
        <a href="#" class="text-gray-800 text-hover-primary fs-5 fw-bold"><%= kanji.yin_han %></a>
      </div>
    </div>
  </td>
  <td class="text-end pe-0">
    <span class="fw-bold"><%= kanji.meaning %></span>
  </td>
  <td class="text-end pe-0" data-order="9">
    <span class="fw-bold text-warning ms-3"><%= kanji.yin_on %></span>
  </td>
  <td class="text-end pe-0"><%= kanji.yin_kun %></td>
  <td class="text-end pe-0" data-order="rating-5">
    <div class="rating justify-content-end">
     <%= level_of_difficult(kanji.number_of_strokes) %>
    </div>
  </td>
  <td class="text-end pe-0" data-order="Scheduled">
    <span class="badge badge-<%= level_of_kanji(kanji&.level_kanji&.name) %>"><%= kanji&.level_kanji&.name %></span>
  </td>
  <td class="text-end">
    <a href="#" class="btn btn-sm btn-light btn-flex btn-center btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
      hành động
      <i class="ki-outline ki-down fs-5 ms-1"></i>
    </a>
    <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
      <div class="menu-item px-3">
        <a href="<%= edit_admin_kanji_path(kanji) %>" class="menu-link px-3">Sửa</a>
      </div>
      <div class="menu-item px-3">
        <a href="#" class="menu-link px-3">Xóa</a>
      </div>
    </div>
  </td>
</tr>
